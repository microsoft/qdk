{
  "compilerOptions": {
    "outDir": "../dist",
    "declaration": true,
    "sourceMap": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "strict": true /* enable all strict type-checking options */,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": []
  }
}
