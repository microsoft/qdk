{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "noEmit": true,
    "lib": ["DOM", "ES2020"],
    "strict": true /* enable all strict type-checking options */,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "skipLibCheck": true,
    "customConditions": ["browser"] // Required as 'node' is automatically added also.
  }
}
