{
  "name": "qsc-workspace",
  "workspaces": [
    "./npm",
    "./playground"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=16.17.0"
  },
  "scripts": {
    "eslint:check": "eslint -c ./.eslintrc.cjs ./",
    "tsc:check": "tsc -p ./playground/src",
    "prettier:check": "prettier -c --no-config ./",
    "check": "npm run eslint:check && npm run tsc:check && npm run prettier:check",
    "prettier:fix": "prettier -w --no-config ./"
  },
  "private": true,
  "devDependencies": {
    "@types/node": "^18.15.3",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "esbuild": "^0.17.12",
    "eslint": "^8.39.0",
    "github-markdown-css": "^5.2.0",
    "marked": "^4.3.0",
    "mathjax": "^3.2.2",
    "monaco-editor": "^0.36.1",
    "preact": "^10.13.1",
    "prettier": "2.8.8",
    "typescript": "^5.0.2"
  }
}
