{
  "title": "Q# project manifest",
  "type": "object",
  "properties": {
    "author": {
      "title": "Author",
      "type": "string"
    },
    "license": {
      "title": "License",
      "type": "string"
    },
    "languageFeatures": {
      "title": "Language features",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "lints": {
      "title": "Lints",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "lint": {
            "type": "string",
            "enum": ["divisionByZero", "needlessParens", "redundantSemicolons"]
          },
          "level": {
            "type": "string",
            "enum": ["allow", "warn", "error"]
          }
        }
      }
    }
  }
}
