{
  "name": "qsharp-vscode",
  "displayName": "Q# (new)",
  "description": "Q# Language Support",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.77.0"
  },
  "categories": [
    "Programming Languages",
    "Notebooks"
  ],
  "main": "./out/extension.cjs",
  "activationEvents": [
    "onNotebook:jupyter"
  ],
  "contributes": {
    "languages": [
      {
        "id": "qsharp",
        "aliases": [
          "Q#",
          "qsharp"
        ],
        "extensions": [
          ".qs"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "qsharp",
        "scopeName": "source.qsharp",
        "path": "./syntaxes/qsharp.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "cargoBuild": "cargo build --manifest-path=../wasm/Cargo.toml",
    "copyWasm": "mkdir -p wasm && cp ../npm/lib/web/qsc_wasm_bg.wasm wasm/qsc_wasm_bg.wasm",
    "tsc:check": "node ../node_modules/typescript/bin/tsc -p ./tsconfig.json",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.cjs --external:vscode --format=cjs --platform=browser --define:import.meta.url=__filename",
    "build:vscode": "npm run tsc:check && npm run -S esbuild-base -- --sourcemap",
    "build:all": "npm run cargoBuild && npm run copyWasm && npm run build:vscode",
    "build": "npm run build:vscode"
  }
}
